<h1>Your cart: </h1>
<%# <%= @items.inspect %>
<% total_price = 0 %>
<% total_qty = 0 %>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Qty</th>
    </tr>
  </thead>
  <tbody>

	<% @items.each do |item| %>
	<% total_price += item[1].to_i * item[0].price %>
	<% total_qty += item[1].to_i %>
    <tr>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
    </tr>
	<% end %>
    <tr>
			<td></td>
      <td>Total: <%= total_price %></td>
      <td><%= total_qty %></td>
    </tr>
  </tbody>
</table>

